{
    "name": "aiqfome/challenge-api",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.0",
        "respect/validation": "^2.0",
        "php-di/php-di": "^7.0",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "zircote/swagger-php": "^5.2",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpstan analyse --memory-limit=512M",
        "test": "vendor/bin/phpunit"
    }
}
